@model eVote360.Application.ViewModels.PoliticalAlliance.PoliticalAllianceIndexViewModel
@{
    ViewData["Title"] = "Political Alliances";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Request New Alliance
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Received Requests Section -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-inbox-fill me-2"></i>Received Alliance Requests</h4>
        </div>
        <div class="card-body">
            @if (Model.ReceivedRequests.Count == 0)
            {
                <p class="text-muted">No received alliance requests.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Requesting Party</th>
                                <th>Requested Date</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.ReceivedRequests)
                            {
                                <tr>
                                    <td>
                                        <strong>@request.RequestingPartyName</strong>
                                        <span class="badge bg-primary ms-2">@request.RequestingPartyAcronym</span>
                                    </td>
                                    <td>@request.RequestedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (request.Status == eVote360.Domain.Common.Enums.AllianceStatus.Pending)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-hourglass-split"></i> Pending
                                            </span>
                                        }
                                        else if (request.Status == eVote360.Domain.Common.Enums.AllianceStatus.Accepted)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Accepted
                                            </span>
                                            <br><small class="text-muted">@request.RespondedAt?.ToString("dd/MM/yyyy HH:mm")</small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> Rejected
                                            </span>
                                            <br><small class="text-muted">@request.RespondedAt?.ToString("dd/MM/yyyy HH:mm")</small>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if (request.Status == eVote360.Domain.Common.Enums.AllianceStatus.Pending)
                                        {
                                            <form asp-action="Accept" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@request.Id" />
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="bi bi-check-circle"></i> Accept
                                                </button>
                                            </form>
                                            <form asp-action="Reject" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@request.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-x-circle"></i> Reject
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Sent Requests Section -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-send-fill me-2"></i>Sent Alliance Requests</h4>
        </div>
        <div class="card-body">
            @if (Model.SentRequests.Count == 0)
            {
                <p class="text-muted">No sent alliance requests.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Receiving Party</th>
                                <th>Requested Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.SentRequests)
                            {
                                <tr>
                                    <td>
                                        <strong>@request.ReceivingPartyName</strong>
                                        <span class="badge bg-primary ms-2">@request.ReceivingPartyAcronym</span>
                                    </td>
                                    <td>@request.RequestedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (request.Status == eVote360.Domain.Common.Enums.AllianceStatus.Pending)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-hourglass-split"></i> Pending Response
                                            </span>
                                        }
                                        else if (request.Status == eVote360.Domain.Common.Enums.AllianceStatus.Accepted)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Accepted
                                            </span>
                                            <br><small class="text-muted">@request.RespondedAt?.ToString("dd/MM/yyyy HH:mm")</small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> Rejected
                                            </span>
                                            <br><small class="text-muted">@request.RespondedAt?.ToString("dd/MM/yyyy HH:mm")</small>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
