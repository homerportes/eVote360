@model eVote360.Application.DTOs.PoliticalAlliance.SavePoliticalAllianceDTO
@{
    ViewData["Title"] = "Request Alliance";
    var availableParties = ViewBag.AvailableParties as List<(int Id, string Name, string Acronym)>;
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            @if (availableParties == null || !availableParties.Any())
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> No hay partidos polÃ­ticos disponibles para formar alianzas.
                    <p class="mb-0 mt-2">Esto puede deberse a que:</p>
                    <ul>
                        <li>Ya tiene solicitudes pendientes con todos los partidos activos</li>
                        <li>Ya tiene alianzas activas con todos los partidos disponibles</li>
                        <li>No hay otros partidos polÃ­ticos activos en el sistema</li>
                    </ul>
                </div>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al Listado
                </a>
            }
            else
            {
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="ReceivingPartyId" class="form-label">Select Party to Request Alliance <span class="text-danger">*</span></label>
                        <select asp-for="ReceivingPartyId" class="form-select" required>
                            <option value="">-- Select a Party --</option>
                            @foreach (var party in availableParties)
                            {
                                <option value="@party.Id">@party.Name (@party.Acronym)</option>
                            }
                        </select>
                        <span asp-validation-for="ReceivingPartyId" class="text-danger"></span>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> <strong>Nota:</strong> Una vez enviada la solicitud, el partido seleccionado podrÃ¡ aceptarla o rechazarla.
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i> Send Alliance Request
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
