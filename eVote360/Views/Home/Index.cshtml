@{
    ViewData["Title"] = "Voter Registration";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <div class="jumbotron bg-success text-white p-5 rounded shadow-lg">
                <h1 class="display-3 fw-bold">
                    <i class="bi bi-check2-circle me-3"></i>eVote360
                </h1>
                <p class="lead fs-4 mt-4">Modern Electronic Voting System</p>
                <hr class="my-4 bg-white">
                <p class="fs-5">Secure, Transparent, and Reliable Electoral Process</p>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h2 class="text-center text-success mb-4">
                        <i class="bi bi-person-plus-fill me-2"></i>Voter Registration
                    </h2>
                    <p class="text-center text-muted lead mb-5">
                        Register as a voter and participate in upcoming elections
                    </p>
                    
                    <div class="row g-4">
                        <div class="col-md-4 text-center">
                            <div class="p-4 bg-light rounded">
                                <i class="bi bi-1-circle-fill text-success" style="font-size: 3rem;"></i>
                                <h5 class="mt-3">Register</h5>
                                <p class="text-muted">Complete your voter registration form</p>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="p-4 bg-light rounded">
                                <i class="bi bi-2-circle-fill text-success" style="font-size: 3rem;"></i>
                                <h5 class="mt-3">Verify</h5>
                                <p class="text-muted">Confirm your identity and information</p>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="p-4 bg-light rounded">
                                <i class="bi bi-3-circle-fill text-success" style="font-size: 3rem;"></i>
                                <h5 class="mt-3">Vote</h5>
                                <p class="text-muted">Cast your vote securely online</p>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-5">
                        <button class="btn btn-success btn-lg px-5 py-3" disabled>
                            <i class="bi bi-person-plus-fill me-2"></i>Voter Registration (Coming Soon)
                        </button>
                        <p class="text-muted mt-3 small">
                            <i class="bi bi-info-circle-fill me-1"></i>Registration will be available when elections are active
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5 mb-5">
        <div class="col-lg-10 mx-auto">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card h-100 border-success shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-shield-check text-success" style="font-size: 3rem;"></i>
                            <h5 class="card-title mt-3">Secure Voting</h5>
                            <p class="card-text text-muted">Your vote is encrypted and protected with state-of-the-art security measures</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100 border-success shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-eye text-success" style="font-size: 3rem;"></i>
                            <h5 class="card-title mt-3">Transparent Process</h5>
                            <p class="card-text text-muted">All electoral processes are auditable and transparent for public trust</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
