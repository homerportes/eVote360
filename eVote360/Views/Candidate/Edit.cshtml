@model eVote360.Application.ViewModels.Candidate.UpdateCandidateViewModel
@{
    ViewData["Title"] = "Edit Candidate";
}

<div class="container mt-4">
    <div class="col-12 col-md-8 offset-md-2">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white text-center">
                <h5>@ViewData["Title"]</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CurrentPhotoUrl" />
                    <input type="hidden" asp-for="IsActive" />
                    
                    @if (!string.IsNullOrEmpty(Model.CurrentPhotoUrl))
                    {
                        <div class="mb-3 text-center">
                            <label class="form-label">Current Photo</label>
                            <div>
                                <img src="~/@Model.CurrentPhotoUrl" alt="Current photo" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="CitizenId" class="form-label">Citizen</label>
                        <select asp-for="CitizenId" class="form-select" asp-items="@ViewBag.Citizens">
                            <option value="">-- Select Citizen --</option>
                        </select>
                        <span asp-validation-for="CitizenId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PartyId" class="form-label">Political Party</label>
                        <select asp-for="PartyId" class="form-select" asp-items="@ViewBag.Parties">
                            <option value="">-- Select Party --</option>
                        </select>
                        <span asp-validation-for="PartyId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Photo" class="form-label">Photo (Optional - leave empty to keep current)</label>
                        <input asp-for="Photo" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                        <small class="form-text text-muted">Accepted formats: JPG, PNG, GIF. Max size: 5MB</small>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle me-1"></i>Update
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
