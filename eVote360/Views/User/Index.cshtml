@model List<eVote360.Application.ViewModels.User.UserViewModel>
@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between mb-3">
        <h2 class="text-success">Users</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> New User
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            No users registered yet.
        </div>
    }
    else
    {
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-success">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Political Party</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.FirstName</td>
                        <td>@u.LastName</td>
                        <td>@u.Email</td>
                        <td>@u.Username</td>
                        <td>
                            @if (u.Role == 1)
                            {
                                <span class="badge bg-primary">Administrator</span>
                            }
                            else if (u.Role == 2)
                            {
                                <span class="badge bg-info">Dirigente</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Unknown</span>
                            }
                        </td>
                        <td>
                            @if (u.PartyId.HasValue && !string.IsNullOrEmpty(u.PartyName))
                            {
                                <span class="badge bg-success">@u.PartyName (@u.PartyAcronym)</span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>
                            <span class="badge @(u.IsActive ? "bg-success" : "bg-danger")">
                                @(u.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-warning btn-sm text-white">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                @if (u.IsActive)
                                {
                                    <a asp-action="Deactivate" asp-route-id="@u.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-slash-circle"></i> Deactivate
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="Activate" asp-route-id="@u.Id" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-check-circle"></i> Activate
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
