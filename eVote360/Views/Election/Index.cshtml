@model eVote360.Application.ViewModels.Election.ElectionIndexViewModel
@{
    ViewData["Title"] = "Elecciones";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        @if (!Model.HasActiveElection)
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Iniciar Nuevo Proceso Electivo
            </a>
        }
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Elections.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay elecciones registradas. Inicie un nuevo proceso electivo.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre de la ElecciÃ³n</th>
                                <th>Fecha de RealizaciÃ³n</th>
                                <th>Partidos Participantes</th>
                                <th>Puestos Disputados</th>
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var election in Model.Elections)
                            {
                                <tr class="@(election.Status == eVote360.Domain.Common.Enums.ElectionStatus.InProcess ? "table-warning" : "")">
                                    <td>
                                        @if (election.Status == eVote360.Domain.Common.Enums.ElectionStatus.InProcess)
                                        {
                                            <i class="bi bi-star-fill text-warning me-2"></i>
                                        }
                                        <strong>@election.Name</strong>
                                    </td>
                                    <td>@election.Date.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-primary">@election.ParticipatingPartiesCount partidos</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@election.DisputedPositionsCount puestos</span>
                                    </td>
                                    <td>
                                        @if (election.Status == eVote360.Domain.Common.Enums.ElectionStatus.InProcess)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-hourglass-split"></i> En Proceso
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Finalizada
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if (election.Status == eVote360.Domain.Common.Enums.ElectionStatus.InProcess)
                                        {
                                            <a asp-action="Finish" asp-route-id="@election.Id" 
                                               class="btn btn-sm btn-danger">
                                                <i class="bi bi-stop-circle"></i> Finalizar
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Results" asp-route-id="@election.Id" 
                                               class="btn btn-sm btn-success">
                                                <i class="bi bi-trophy"></i> Ver Resultados
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
