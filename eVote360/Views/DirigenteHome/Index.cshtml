@model eVote360.Application.ViewModels.DirigenteHome.DirigenteHomeIndexViewModel

@{
    ViewData["Title"] = "Dirigente Dashboard";
    Layout = "~/Views/Shared/_LayoutDirigente.cshtml";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 text-info">
                <i class="bi bi-flag-fill me-3"></i>Dirigente Dashboard
            </h1>
            <p class="lead text-muted">Manage your party's candidates and campaigns</p>
            <hr class="my-4">
        </div>
    </div>

    @if (Model.Party != null)
    {
        <!-- Party Information Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <h3 class="text-white mb-0">
                            <i class="bi bi-building me-2"></i>My Political Party
                        </h3>
                    </div>
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-3 text-center">
                                @if (!string.IsNullOrEmpty(Model.Party.LogoUrl))
                                {
                                    <img src="@Url.Content(Model.Party.LogoUrl)" 
                                         alt="@Model.Party.Name Logo" 
                                         class="img-fluid rounded shadow"
                                         style="max-height: 150px; max-width: 100%;">
                                }
                                else
                                {
                                    <div class="bg-secondary rounded d-flex align-items-center justify-content-center" 
                                         style="height: 150px; width: 150px; margin: 0 auto;">
                                        <i class="bi bi-flag-fill text-white" style="font-size: 4rem;"></i>
                                    </div>
                                }
                            </div>
                            <div class="col-md-9">
                                <h2 class="text-primary mb-2">
                                    @Model.Party.Name
                                    <span class="badge bg-info ms-2">@Model.Party.Acronym</span>
                                </h2>
                                @if (!string.IsNullOrEmpty(Model.Party.Description))
                                {
                                    <p class="text-muted mb-0">
                                        <i class="bi bi-info-circle me-2"></i>@Model.Party.Description
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dashboard Indicators Section -->
        <div class="row mb-5">
            <div class="col-12 mb-3">
                <h3 class="text-secondary">
                    <i class="bi bi-graph-up-arrow me-2"></i>Key Indicators
                </h3>
                <hr>
            </div>

            <!-- Active Candidates -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-0" style="border-left: 5px solid #28a745 !important;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Active Candidates</h6>
                                <h2 class="mb-0 text-success">@Model.Indicators.ActiveCandidates</h2>
                            </div>
                            <div class="text-success" style="font-size: 3rem; opacity: 0.3;">
                                <i class="bi bi-person-check-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Inactive Candidates -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-0" style="border-left: 5px solid #dc3545 !important;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Inactive Candidates</h6>
                                <h2 class="mb-0 text-danger">@Model.Indicators.InactiveCandidates</h2>
                            </div>
                            <div class="text-danger" style="font-size: 3rem; opacity: 0.3;">
                                <i class="bi bi-person-x-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Total Alliances -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-0" style="border-left: 5px solid #007bff !important;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Political Alliances</h6>
                                <h2 class="mb-0 text-primary">@Model.Indicators.TotalAlliances</h2>
                            </div>
                            <div class="text-primary" style="font-size: 3rem; opacity: 0.3;">
                                <i class="bi bi-link-45deg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pending Alliance Requests -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-0" style="border-left: 5px solid #ffc107 !important;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Pending Requests</h6>
                                <h2 class="mb-0 text-warning">@Model.Indicators.PendingAllianceRequests</h2>
                            </div>
                            <div class="text-warning" style="font-size: 3rem; opacity: 0.3;">
                                <i class="bi bi-hourglass-split"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Candidates Assigned to Positions -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-0" style="border-left: 5px solid #17a2b8 !important;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Assigned to Positions</h6>
                                <h2 class="mb-0 text-info">@Model.Indicators.CandidatesAssignedToPositions</h2>
                            </div>
                            <div class="text-info" style="font-size: 3rem; opacity: 0.3;">
                                <i class="bi bi-award-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Quick Access Cards -->
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="text-secondary">
                <i class="bi bi-grid-3x3-gap-fill me-2"></i>Quick Access
            </h3>
            <hr>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 border-info">
                <div class="card-body text-center">
                    <i class="bi bi-person-vcard-fill text-info" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">My Candidates</h5>
                    <p class="card-text text-muted">Manage party candidates</p>
                    <a asp-controller="Candidate" asp-action="Index" class="btn btn-info">
                        <i class="bi bi-gear-fill me-2"></i>Manage
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 border-success">
                <div class="card-body text-center">
                    <i class="bi bi-trophy-fill text-success" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Assign to Positions</h5>
                    <p class="card-text text-muted">Assign candidates to positions</p>
                    <a asp-controller="Candidacy" asp-action="Index" class="btn btn-success">
                        <i class="bi bi-gear-fill me-2"></i>Manage
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-link-45deg text-primary" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Alliances</h5>
                    <p class="card-text text-muted">Manage political alliances</p>
                    <a asp-controller="PoliticalAlliance" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-gear-fill me-2"></i>Manage
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 border-warning">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill text-warning" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Citizens</h5>
                    <p class="card-text text-muted">Browse citizens</p>
                    <a asp-controller="Citizen" asp-action="Index" class="btn btn-warning">
                        <i class="bi bi-search me-2"></i>View
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
