@model eVote360.Application.ViewModels.Candidacy.CreateCandidacyViewModel
@{
    ViewData["Title"] = "Assign Candidate to Position";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Note:</strong> You can assign candidates from your own party or from allied parties. 
                        Candidates from allied parties can only be assigned to the same position they hold in their original party.
                    </div>

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="CandidateId" class="form-label">Candidate</label>
                            <select asp-for="CandidateId" class="form-select" asp-items="ViewBag.Candidates">
                                <option value="0">-- Select Candidate --</option>
                            </select>
                            <span asp-validation-for="CandidateId" class="text-danger"></span>
                            <div class="form-text">
                                Only active candidates without an existing candidacy in your party are shown.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ElectivePositionId" class="form-label">Elective Position</label>
                            <select asp-for="ElectivePositionId" class="form-select" asp-items="ViewBag.Positions">
                                <option value="0">-- Select Position --</option>
                            </select>
                            <span asp-validation-for="ElectivePositionId" class="text-danger"></span>
                            <div class="form-text">
                                Only positions without a candidate from your party are shown.
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Assign
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
