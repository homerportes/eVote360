        cas@model dynamic
@{
    bool editMode = ViewBag.EditMode ?? false;
    ViewData["Title"] = editMode ? "Edit Citizen" : "Create Citizen";
}

<div class="container mt-4">
    <div class="col-12 col-md-8 offset-md-2">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white text-center">
                <h5>@ViewData["Title"]</h5>
            </div>
            <div class="card-body">
                <form asp-action="@(editMode ? "Edit" : "Create")" method="post">
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="mb-3">
                        <label for="FirstName" class="form-label">First Name</label>
                        <input name="FirstName" id="FirstName" value="@Model.FirstName" class="form-control" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="FirstName" data-valmsg-replace="true"></span>
                    </div>

                    <div class="mb-3">
                        <label for="LastName" class="form-label">Last Name</label>
                        <input name="LastName" id="LastName" value="@Model.LastName" class="form-control" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="LastName" data-valmsg-replace="true"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input name="Email" id="Email" value="@Model.Email" class="form-control" type="email" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                    </div>

                    <div class="mb-3">
                        <label for="IdentityDocument" class="form-label">Identity Document</label>
                        <input name="IdentityDocument" id="IdentityDocument" value="@Model.IdentityDocument" class="form-control" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="IdentityDocument" data-valmsg-replace="true"></span>
                    </div>
                    
                    <input type="hidden" name="IsActive" value="@Model.IsActive" />

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle me-1"></i>@(editMode ? "Update" : "Create")
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
