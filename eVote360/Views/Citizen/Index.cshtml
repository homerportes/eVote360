@model List<eVote360.Application.ViewModels.Citizen.CitizenViewModel>
@{
    ViewData["Title"] = "Citizen Management";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between mb-3">
        <h2 class="text-success">Citizens</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> New Citizen
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            No citizens registered yet.
        </div>
    }
    else
    {
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-success">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Identity Document</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.FirstName</td>
                        <td>@c.LastName</td>
                        <td>@c.Email</td>
                        <td>@c.IdentityDocument</td>
                        <td>
                            <span class="badge @(c.IsActive ? "bg-success" : "bg-danger")">
                                @(c.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-warning btn-sm text-white">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                @if (c.IsActive)
                                {
                                    <a asp-action="Deactivate" asp-route-id="@c.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-slash-circle"></i> Deactivate
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="Activate" asp-route-id="@c.Id" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-check-circle"></i> Activate
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
