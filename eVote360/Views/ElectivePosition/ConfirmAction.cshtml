@using eVote360.Application.ViewModels.ElectivePosition
@model ConfirmElectivePositionActionViewModel

@{
    var isActivating = !Model.IsActive;
    var actionText = isActivating ? "activate" : "deactivate";
    var title = isActivating ? "Activate Position" : "Deactivate Position";
    var btnClass = isActivating ? "btn-success" : "btn-danger";
}

<div class="col-12 col-md-6 offset-md-3">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h5 class="text-center">@title</h5>
        </div>
        <div class="card-body text-center">
            <p class="lead">Are you sure you want to @actionText this position?</p>
            <p><strong>@Model.Name</strong></p>

            <form asp-controller="ElectivePosition" asp-action="@(isActivating ? "Activate" : "Deactivate")" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn @btnClass me-2">
                    Confirm
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>
