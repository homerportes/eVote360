@using eVote360.Application.Helpers
@using eVote360.Application.ViewModels.User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eVote360</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eVote360.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Voting" asp-action="Index">
                    <i class="bi bi-vote-fill me-2"></i>eVote360
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @{
                        var userSession = Context.Session.Get<UserViewModel>("User");
                    }
                    <ul class="navbar-nav flex-grow-1">
                        @if (userSession != null)
                        {
                            // Menú para usuarios autenticados (Admin o Dirigente)
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ElectivePosition" asp-action="Index">
                                    <i class="bi bi-award-fill me-1"></i>Puestos Electivos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="PoliticalParty" asp-action="Index">
                                    <i class="bi bi-flag-fill me-1"></i>Partidos Políticos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">
                                    <i class="bi bi-people-fill me-1"></i>Usuarios
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Citizen" asp-action="Index">
                                    <i class="bi bi-person-badge-fill me-1"></i>Ciudadanos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Candidate" asp-action="Index">
                                    <i class="bi bi-person-vcard-fill me-1"></i>Candidatos
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (userSession != null)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-circle me-1"></i>@userSession.Username
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="bi bi-person-fill me-2"></i>@userSession.FirstName @userSession.LastName
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" asp-controller="Login" asp-action="Logout">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link btn btn-outline-primary px-3" asp-area="" asp-controller="Login" asp-action="Index">
                                        <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - eVote360 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
