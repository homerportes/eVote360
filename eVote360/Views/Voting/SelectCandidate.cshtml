@model eVote360.ViewModels.Voting.CandidateSelectionViewModel

@{
    ViewData["Title"] = "Seleccio³n de Candidato";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-users"></i> Candidatos para: @Model.PositionName
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> 
                        Seleccione el candidato de su preferencia para la posicio³n de <strong>@Model.PositionName</strong>.
                    </div>

                    @if (!Model.Candidates.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> 
                            No hay candidatos disponibles para esta posicio³n.
                        </div>
                        <a asp-action="SelectPosition" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Regresar
                        </a>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var candidate in Model.Candidates)
                            {
                                <div class="col-md-4 col-lg-3 mb-4">
                                    <div class="card h-100 candidate-card">
                                        <div class="card-img-top-wrapper" style="height: 200px; overflow: hidden; background-color: #f8f9fa;">
                                            @if (!string.IsNullOrEmpty(candidate.PhotoPath))
                                            {
                                                <img src="@Url.Content(candidate.PhotoPath)" 
                                                     class="card-img-top" 
                                                     alt="@candidate.CandidateName"
                                                     style="width: 100%; height: 100%; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="d-flex align-items-center justify-content-center h-100">
                                                    <i class="fas fa-user fa-5x text-muted"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="card-body text-center">
                                            <h5 class="card-title">@candidate.CandidateName</h5>
                                            <p class="card-text">
                                                <span class="badge bg-info">@candidate.PartyAcronym</span>
                                            </p>
                                            <form asp-action="Vote" method="post" class="d-inline">
                                                <input type="hidden" name="positionId" value="@Model.PositionId" />
                                                <input type="hidden" name="candidateId" value="@candidate.CandidateId" />
                                                <button type="submit" class="btn btn-primary w-100">
                                                    <i class="fas fa-check-circle"></i> Votar
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="col-md-4 col-lg-3 mb-4">
                                <div class="card h-100 candidate-card blank-vote-card">
                                    <div class="card-img-top-wrapper" style="height: 200px; overflow: hidden; background-color: #e9ecef;">
                                        <div class="d-flex align-items-center justify-content-center h-100">
                                            <i class="fas fa-ban fa-5x text-secondary"></i>
                                        </div>
                                    </div>
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Ninguno</h5>
                                        <p class="card-text">
                                            <span class="badge bg-secondary">Voto en Blanco</span>
                                        </p>
                                        <form asp-action="Vote" method="post" class="d-inline">
                                            <input type="hidden" name="positionId" value="@Model.PositionId" />
                                            <input type="hidden" name="candidateId" value="0" />
                                            <button type="submit" class="btn btn-secondary w-100">
                                                <i class="fas fa-check-circle"></i> Votar
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <a asp-action="SelectPosition" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Regresar a Posiciones
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .candidate-card {
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: pointer;
    }
    
    .candidate-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
    }

    .blank-vote-card {
        border: 2px dashed #6c757d;
    }

    .blank-vote-card:hover {
        border-color: #495057;
        background-color: #f8f9fa;
    }
</style>
