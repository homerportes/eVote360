@model eVote360.ViewModels.Voting.OcrValidationViewModel

@{
    ViewData["Title"] = "Validación de Identidad";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-id-card"></i> Validación de Identidad con OCR</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> 
                        <strong>Importante:</strong> Por favor tome una foto clara de su cédula de identidad.
                        Asegúrese que el número de cédula sea legible.
                    </div>

                    <div class="mb-3">
                        <p><strong>Cédula ingresada:</strong> <span class="badge bg-info">@Model.DocumentNumber</span></p>
                    </div>

                    <form asp-action="ValidateOcr" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="DocumentNumber" />

                        <div class="form-group mb-3">
                            <label asp-for="DocumentImage" class="form-label"></label>
                            <input asp-for="DocumentImage" 
                                   type="file" 
                                   class="form-control" 
                                   accept="image/*"
                                   id="documentImageInput" />
                            <span asp-validation-for="DocumentImage" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Formatos aceptados: JPG, PNG. Tamaño máximo: 5MB
                            </small>
                        </div>

                        <div class="mb-3" id="imagePreview" style="display:none;">
                            <label class="form-label">Vista Previa:</label>
                            <div class="border p-2 text-center">
                                <img id="preview" src="#" alt="Vista previa" class="img-fluid" style="max-height: 300px;" />
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn" disabled>
                                <i class="fas fa-check-circle"></i> Validar Identidad
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Regresar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title"><i class="fas fa-lightbulb"></i> Consejos para una buena captura</h6>
                    <ul class="small text-muted mb-0">
                        <li>Coloque la cédula sobre una superficie plana y bien iluminada</li>
                        <li>Evite sombras o reflejos sobre el documento</li>
                        <li>Asegúrese que el número de cédula sea claramente visible</li>
                        <li>La imagen debe estar enfocada (no borrosa)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.getElementById('documentImageInput').addEventListener('change', function(e) {
            var file = e.target.files[0];
            if (file) {
                // Show preview
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('preview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
                
                // Enable submit button
                document.getElementById('submitBtn').disabled = false;
            } else {
                document.getElementById('imagePreview').style.display = 'none';
                document.getElementById('submitBtn').disabled = true;
            }
        });
    </script>
}
